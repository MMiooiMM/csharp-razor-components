<h1>Practice</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>
<button class="btn btn-danger" onclick="@Clear">Clear</button>

@functions {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

    void Clear()
    {
        currentCount = 0;
    }
}
